{
  "name": "root",
  "private": true,
  "scripts": {
    "configs": "node tools/update-configs",
    "compile": "lerna run clear && lerna link && lerna run compile",
    "test": "lerna run test",
    "geometry": "lerna exec --scope @amatiasq/geometry",
    "quadtree": "lerna exec --scope @amatiasq/quadtree",
    "quadtree:demo": "git rm docs/quadtree/demo*; tools/build-demo.sh quadtree && git add docs/quadtree/demo*",
    "util": "lerna exec --scope @amatiasq/util",
    "demo": "npm run quadtree:demo",
    "start": "npm run compile && lerna run --scope @amatiasq/quadtree start"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "cz-lerna-changelog": "^2.0.2",
    "jest": "^24.3.1",
    "lerna": "^3.13.1",
    "parcel": "^1.12.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
