{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5"
  },
  "exclude": ["../node_modules"],
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "strict": true,
  "noUnusedLocals": true
}
